<p id="notice"><%= notice %></p>

<h1>Dohnuts</h1>

<table>
  <thead>
    <tr>
      <th>Flavor</th>
      <th>Size</th>
      <th>Sprinkles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dohnuts.each do |dohnut| %>
      <tr>
        <td><%= dohnut.flavor %></td>
        <td><%= dohnut.size %></td>
        <td><%= dohnut.sprinkles %></td>
        <td><%= dohnut.ryan_name %></td>
        <td><%= link_to 'Show', dohnut %></td>
        <td><%= link_to 'Edit', edit_dohnut_path(dohnut) %></td>
        <td><%= link_to 'Destroy', dohnut, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

